<div>
  <h1>
    <%= @the_board.name %>
  </h1>
</div>  

<hr>

<div>
  <h2>Add a new post</h2>
  <form action="">
    <div>
      <label for="title_box">Title</label>
      <input id="title_box" name="" type="text">
    </div>
    <div>
      <label for="body_box">Body</label>
      <textarea id="body_box" name="" type="text"></textarea>
    </div>
    <div>
      <label for="expires_on_box">Expires on</label>
      <input id="expires_on_box" name="" type="date">
    </div>
    <button>Add post</button>
  </form>
</div>

<hr>

<div>
  <h2>Active posts</h2>
  <table border= "1">
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Posted on</th>
      <th>Expires on</th>
    </tr>
    <% @the_board.posts.each do |post|%>
    <tr>
      <td><%= post.title%></td>
      <td><%= post.body%></td>
      <td><%= post.created_at%></td>
      <td><%= post.expires_on%></td>
    </tr>
    <%end%>
  </table>

  <h2>Expired posts</h2>
  
    <table border= "1">
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Posted on</th>
      <th>Expired on</th>
    </tr>
    <% @the_board.posts.each do |post|%>
    <tr>
      <td><%= post.title%></td>
      <td><%= post.body%></td>
      <td><%= post.created_at%></td>
      <td><%= post.expires_on%></td>
    </tr>
    <%end%>
  </table>
  
</div>
